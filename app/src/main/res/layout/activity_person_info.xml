<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PersonInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_top"
                    android:layout_width="match_parent"
                    android:layout_height="375dip">

                    <RelativeLayout
                        android:id="@+id/layout_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#cccccc">

                        <ImageView
                            android:id="@+id/background"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dip">

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="16dip"
                            android:layout_height="16dip"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dip"
                            android:src="@mipmap/common_back_white" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text=""
                            android:textColor="#ffffff"
                            android:textSize="17dip"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="10dip"
                                android:layout_height="13dip"
                                android:src="@mipmap/person_info_address" />

                            <TextView
                                android:id="@+id/location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dip"
                                android:layout_marginRight="15dip"
                                android:text="···"
                                android:textColor="#ffffff"
                                android:textSize="14dip" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dip"
                            android:text="···"
                            android:textColor="#ffffff"
                            android:textSize="20dip"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="60dip">

                    <!--土豪值-->
                    <LinearLayout
                        android:id="@+id/layout_value"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dip"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="72dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dip"
                                android:text="土豪值："
                                android:textColor="#B9B8C1"
                                android:textSize="14dip" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dip"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/luxury"
                                    android:layout_width="match_parent"
                                    android:layout_height="49dip"
                                    android:background="@null"
                                    android:gravity="center_vertical"
                                    android:textColor="#3C3B41"
                                    android:textSize="14dip" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dip"
                                    android:background="#d4d4d4"></View>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!--个人相册-->
                    <RelativeLayout
                        android:id="@+id/layout_photo_show"
                        android:layout_width="match_parent"
                        android:layout_height="70dip">

                        <TextView
                            android:id="@+id/tip"
                            android:layout_width="72dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dip"
                            android:text="个人相册："
                            android:textColor="#B9B8C1"
                            android:textSize="14dip" />

                        <!--<LinearLayout-->
                        <!--android:id="@+id/layout_photo"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_toRightOf="@+id/tip"-->
                        <!--android:orientation="vertical">-->

                        <!---->
                        <!--</LinearLayout>-->

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/photo_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="40dip"
                            android:layout_toRightOf="@+id/tip"></android.support.v7.widget.RecyclerView>

                        <ImageView
                            android:layout_width="16dip"
                            android:layout_height="16dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dip"
                            android:src="@mipmap/common_right" />
                    </RelativeLayout>

                    <!--真人认证-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dip"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="72dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dip"
                                android:text="真人认证："
                                android:textColor="#B9B8C1"
                                android:textSize="14dip" />

                            <LinearLayout
                                android:id="@+id/layout_auth"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dip"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="17dip"
                                        android:layout_height="12dip"
                                        android:src="@mipmap/look_me_card" />

                                    <TextView
                                        android:id="@+id/auth"
                                        android:layout_width="wrap_content"
                                        android:layout_height="49dip"
                                        android:layout_marginLeft="6dip"
                                        android:background="@null"
                                        android:gravity="center_vertical"
                                        android:text="未认证"
                                        android:textColor="#B9B8C1"
                                        android:textSize="14dip" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical|right"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="16dip"
                                            android:layout_height="16dip"
                                            android:layout_marginRight="15dip"
                                            android:src="@mipmap/common_right" />
                                    </LinearLayout>
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dip"
                                    android:background="#d4d4d4"></View>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!--社交号码-->
                    <LinearLayout
                        android:id="@+id/layout_number"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dip"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="72dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dip"
                                android:text="社交号码："
                                android:textColor="#B9B8C1"
                                android:textSize="14dip" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dip"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/number"
                                    android:layout_width="match_parent"
                                    android:layout_height="49dip"
                                    android:background="@null"
                                    android:gravity="center_vertical"
                                    android:textColor="#3C3B41"
                                    android:textSize="14dip" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dip"
                                    android:background="#d4d4d4"></View>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!--内心独白-->
                    <LinearLayout
                        android:id="@+id/layout_monologue"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dip"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="72dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dip"
                                android:text="内心独白："
                                android:textColor="#B9B8C1"
                                android:textSize="14dip" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dip"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/monologue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="49dip"
                                        android:background="@null"
                                        android:gravity="center_vertical"
                                        android:textColor="#3C3B41"
                                        android:textSize="14dip" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical|right"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="16dip"
                                            android:layout_height="16dip"
                                            android:layout_marginRight="15dip"
                                            android:src="@mipmap/common_right" />
                                    </LinearLayout>
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dip"
                                    android:background="#d4d4d4"></View>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!--基本信息-->
                    <RelativeLayout
                        android:id="@+id/layout_basic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="72dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dip"
                                android:text="基本信息："
                                android:textColor="#B9B8C1"
                                android:textSize="14dip" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/basic_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dip"
                                android:layout_marginBottom="10dip"></android.support.v7.widget.RecyclerView>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="16dip"
                            android:layout_height="16dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dip"
                            android:src="@mipmap/common_right" />
                    </RelativeLayout>


                    <!--语音签名-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dip"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="72dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dip"
                                android:text="语音签名："
                                android:textColor="#B9B8C1"
                                android:textSize="14dip" />

                            <LinearLayout
                                android:id="@+id/layout_voice"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dip"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/voice"
                                        android:layout_width="15dip"
                                        android:layout_height="15dip"
                                        android:src="@mipmap/person_info_audio" />

                                    <TextView
                                        android:id="@+id/audio"
                                        android:layout_width="wrap_content"
                                        android:layout_height="49dip"
                                        android:layout_marginLeft="12dip"
                                        android:background="@null"
                                        android:gravity="center_vertical"
                                        android:textColor="#B9B8C1"
                                        android:textSize="15dip" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical|right"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="16dip"
                                            android:layout_height="16dip"
                                            android:layout_marginRight="15dip"
                                            android:src="@mipmap/common_right" />
                                    </LinearLayout>
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dip"
                                    android:background="#d4d4d4"></View>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <!--操作按钮底部-->
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="52dip"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout_find"
            android:layout_width="100dip"
            android:layout_height="35dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@drawable/shape_person_info_find_normal_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:src="@mipmap/person_info_like_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搭讪"
                android:textColor="#FFFFFF"
                android:textSize="14dip" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_message"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:src="@mipmap/person_info_message" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:text="私信"
                android:textColor="#B9B8C1"
                android:textSize="9dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_video"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:src="@mipmap/person_info_video" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:text="通话"
                android:textColor="#B9B8C1"
                android:textSize="9dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_follow"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_follow"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:src="@mipmap/person_info_follow_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:text="关注"
                android:textColor="#B9B8C1"
                android:textSize="9dip" />
        </LinearLayout>
    </LinearLayout>

    <!--拍摄-->
    <LinearLayout
        android:id="@+id/layout_take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout_camera"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17dip"
                android:layout_height="14.5dip"
                android:src="@mipmap/build_user_camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="拍照"
                android:textColor="#3C3B41"
                android:textSize="14dip" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="#D4D4D4"></View>

        <LinearLayout
            android:id="@+id/layout_photo"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dip"
                android:layout_height="18dip"
                android:src="@mipmap/build_user_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="从手机相册选择"
                android:textColor="#3C3B41"
                android:textSize="14dip" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#D4D4D4"></View>

        <LinearLayout
            android:id="@+id/layout_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="取消"
                android:textColor="#3C3B41"
                android:textSize="14dip" />
        </LinearLayout>
    </LinearLayout>

    <!--更多-->
    <LinearLayout
        android:id="@+id/layout_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_more1"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="分享"
            android:textColor="#3C3B41"
            android:textSize="16dip"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#D4D4D4"
            android:visibility="gone"></View>

        <TextView
            android:id="@+id/tv_more2"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="举报"
            android:textColor="#3C3B41"
            android:textSize="16dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#D4D4D4"></View>

        <TextView
            android:id="@+id/tv_more3"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="拉黑"
            android:textColor="#3C3B41"
            android:textSize="16dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#D4D4D4"></View>

        <TextView
            android:id="@+id/tv_more_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="取消"
            android:textColor="#3C3B41"
            android:textSize="16dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#D4D4D4"></View>
    </LinearLayout>
    <!--举报-->
    <LinearLayout
        android:id="@+id/layout_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_report1"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="恶意骚扰"
            android:textColor="#3C3B41"
            android:textSize="16dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="#D4D4D4"></View>

        <TextView
            android:id="@+id/tv_report2"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="色情信息"
            android:textColor="#3C3B41"
            android:textSize="16dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#D4D4D4"></View>

        <TextView
            android:id="@+id/tv_report3"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="性别不符"
            android:textColor="#3C3B41"
            android:textSize="16dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#D4D4D4"></View>


        <TextView
            android:id="@+id/tv_report4"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="垃圾广告"
            android:textColor="#3C3B41"
            android:textSize="16dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#D4D4D4"></View>


        <TextView
            android:id="@+id/tv_report5"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
