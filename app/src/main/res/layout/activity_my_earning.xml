<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9FE"
    tools:context=".ui.main.MyEarningActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="48dip">

            <ImageView
                android:id="@+id/back"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:src="@mipmap/common_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的收益"
                android:textColor="#ff3c3b41"
                android:textSize="17dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_alignParentBottom="true"
                android:background="#D4D4D4"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="171dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:layout_marginRight="15dip"
            android:background="@mipmap/earning_bg">

            <ImageView
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31.5dip"
                android:src="@mipmap/gift_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="#FD7E41"
                        android:textSize="19dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:text="积分余额"
                        android:textColor="#3C3B41"
                        android:textSize="14dip" />

                </LinearLayout>

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="20dip"
                    android:layout_marginLeft="58dip"
                    android:layout_marginRight="52dip"
                    android:background="#B9B8C1"></View>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/drawal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.69元"
                        android:textColor="#FD7E41"
                        android:textSize="19dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:text="可提现金额"
                        android:textColor="#3C3B41"
                        android:textSize="14dip" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/charge"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="52.5dip"
            android:layout_marginTop="25dip"
            android:layout_marginRight="52.5dip"
            android:background="@drawable/build_user_save_bg"
            android:text="积分兑换"
            android:textColor="#ffffff"
            android:textSize="15dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如有问题，可查看"
            android:textColor="#3C3B41"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/score_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:text="积分问题"
            android:textColor="#F75184"
            android:textSize="12dip" />
    </LinearLayout>
</RelativeLayout>