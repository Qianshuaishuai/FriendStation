<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_show_pic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/welcome_img"
        android:layout_width="match_parent"
        android:layout_height="300dip"
        android:src="@mipmap/welcome_one" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_img"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/welcome_icon"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_below="@+id/welcome_img"
            android:src="@mipmap/common_scan" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="16dip"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcome_img"
                android:text="扫描二维码下载"
                android:textColor="#ff37445a"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tip"
                android:layout_centerHorizontal="true"
                android:text="邀请码:XXXXXX"
                android:textColor="#ffff7c93"
                android:textSize="18dip" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
