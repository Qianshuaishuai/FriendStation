<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/head"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginLeft="15dip"
        android:src="@mipmap/look_me_head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知用户"
                android:textColor="#444463"
                android:textSize="15dip" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="10dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="7dip"
                android:background="#B9B8C1"></View>

            <ImageView
                android:layout_width="18dip"
                android:layout_height="13dip"
                android:src="@mipmap/look_me_card" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_info_tip1_bg"
                android:orientation="horizontal"
                android:paddingLeft="5dip"
                android:paddingTop="2dip"
                android:paddingRight="5dip"
                android:paddingBottom="2dip">

                <ImageView
                    android:id="@+id/sex"
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:src="@mipmap/common_male" />

                <TextView
                    android:id="@+id/tip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dip"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="12dip" />
            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="0.5dip"-->
            <!--android:layout_height="10dip"-->
            <!--android:layout_marginLeft="6dip"-->
            <!--android:layout_marginRight="6dip"-->
            <!--android:background="#B9B8C1"></View>-->

            <TextView
                android:id="@+id/tip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:background="@drawable/shape_info_tip2_bg"
                android:paddingLeft="5dip"
                android:paddingTop="2dip"
                android:paddingRight="5dip"
                android:paddingBottom="2dip"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="12dip" />

            <!--<View-->
            <!--android:layout_width="0.5dip"-->
            <!--android:layout_height="10dip"-->
            <!--android:layout_marginLeft="6dip"-->
            <!--android:layout_marginRight="6dip"-->
            <!--android:background="#B9B8C1"></View>-->

            <TextView
                android:id="@+id/tip3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:background="@drawable/shape_info_tip3_bg"
                android:paddingLeft="5dip"
                android:paddingTop="2dip"
                android:paddingRight="5dip"
                android:paddingBottom="2dip"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="12dip" />

            <!--<View-->
            <!--android:layout_width="0.5dip"-->
            <!--android:layout_height="10dip"-->
            <!--android:layout_marginLeft="6dip"-->
            <!--android:layout_marginRight="6dip"-->
            <!--android:background="#B9B8C1"></View>-->

            <!--<TextView-->
            <!--android:id="@+id/job"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="未知"-->
            <!--android:textColor="#B9B8C1"-->
            <!--android:textSize="12dip" />-->

            <!--<View-->
            <!--android:layout_width="0.5dip"-->
            <!--android:layout_height="10dip"-->
            <!--android:layout_marginLeft="6dip"-->
            <!--android:layout_marginRight="6dip"-->
            <!--android:background="#B9B8C1"></View>-->

            <!--<TextView-->
            <!--android:id="@+id/income"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="未知"-->
            <!--android:textColor="#B9B8C1"-->
            <!--android:textSize="12dip" />-->

        </LinearLayout>

        <TextView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:ellipsize="end"
            android:maxWidth="200dip"
            android:singleLine="true"
            android:text="用户暂未设置签名"
            android:textColor="#444463"
            android:textSize="12dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_selected"
            android:layout_width="34dip"
            android:layout_height="34dip"
            android:layout_marginRight="6dip"
            android:src="@mipmap/look_me_collect_selected"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_normal"
            android:layout_width="34dip"
            android:layout_height="34dip"
            android:src="@mipmap/look_me_collect_selected" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dip"
            android:layout_marginBottom="4dip"
            android:text="搭讪"
            android:textColor="@color/colorTipSelected"
            android:textSize="12dip" />
    </LinearLayout>
</LinearLayout>
