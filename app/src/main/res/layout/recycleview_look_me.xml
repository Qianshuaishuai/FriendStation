<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/head"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginLeft="15dip"
        android:src="@mipmap/look_me_head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="香香"
                android:textColor="#444463"
                android:textSize="15dip" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="10dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="7dip"
                android:background="#B9B8C1"></View>

            <ImageView
                android:layout_width="18dip"
                android:layout_height="13dip"
                android:src="@mipmap/look_me_card" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知"
                android:textColor="#B9B8C1"
                android:textSize="12dip" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="10dip"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="#B9B8C1"></View>

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知"
                android:textColor="#B9B8C1"
                android:textSize="12dip" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="10dip"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="#B9B8C1"></View>

            <TextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知"
                android:textColor="#B9B8C1"
                android:textSize="12dip" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="10dip"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="#B9B8C1"></View>

            <TextView
                android:id="@+id/job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知"
                android:textColor="#B9B8C1"
                android:textSize="12dip" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="10dip"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="#B9B8C1"></View>

            <TextView
                android:id="@+id/income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知"
                android:textColor="#B9B8C1"
                android:textSize="12dip" />

        </LinearLayout>

        <TextView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="你见过凌晨四点的太阳么？"
            android:textColor="#B9B8C1"
            android:textSize="12dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_selected"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_marginRight="6dip"
            android:src="@mipmap/look_me_collect_selected"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_normal"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_marginRight="15dip"
            android:src="@mipmap/look_me_collect_normal" />
    </LinearLayout>
</LinearLayout>
