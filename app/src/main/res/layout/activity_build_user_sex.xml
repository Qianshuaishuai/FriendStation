<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.BuildUserSexActivity">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="48dip">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/common_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新建用户信息"
            android:textColor="#ff3c3b41"
            android:textSize="17dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="#D4D4D4"></View>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="218dip"
        android:layout_below="@+id/layout_top"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="15dip"
        android:background="@mipmap/build_user_sex_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_male_normal"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:src="@mipmap/build_user_sex_male"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tip_male_normal"
                android:layout_width="50dip"
                android:layout_height="23dip"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dip"
                android:background="@drawable/shape_build_user_sex_tip_normal"
                android:gravity="center"
                android:text="男"
                android:textColor="#EBABE4"
                android:textSize="15dip"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_male_selected"
                android:layout_width="88dip"
                android:layout_height="88dip"
                android:layout_marginBottom="16dip"
                android:src="@mipmap/build_user_sex_male1" />

            <TextView
                android:id="@+id/tip_male_selected"
                android:layout_width="50dip"
                android:layout_height="23dip"
                android:layout_centerInParent="true"
                android:layout_marginBottom="14dip"
                android:background="@drawable/shape_build_user_sex_tip_selected"
                android:gravity="center"
                android:text="男"
                android:textColor="#DC6598"
                android:textSize="15dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_female_selected"
                android:layout_width="88dip"
                android:layout_height="88dip"
                android:layout_marginBottom="16dip"
                android:src="@mipmap/build_user_sex_female"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tip_female_selected"
                android:layout_width="50dip"
                android:layout_height="23dip"
                android:layout_centerInParent="true"
                android:layout_marginBottom="14dip"
                android:background="@drawable/shape_build_user_sex_tip_selected"
                android:gravity="center"
                android:text="女"
                android:textColor="#DC6598"
                android:textSize="15dip"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_female_normal"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:src="@mipmap/build_user_sex_female1" />

            <TextView
                android:id="@+id/tip_female_normal"
                android:layout_width="50dip"
                android:layout_height="23dip"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dip"
                android:background="@drawable/shape_build_user_sex_tip_selected"
                android:gravity="center"
                android:text="女"
                android:textColor="#EBABE4"
                android:textSize="15dip" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="52.5dip"
        android:layout_marginTop="30dip"
        android:layout_marginRight="52.5dip"
        android:layout_marginBottom="88dip"
        android:background="@drawable/build_user_save_bg"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="15dip" />

</RelativeLayout>