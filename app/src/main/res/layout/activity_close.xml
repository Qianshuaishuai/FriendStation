<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.CloseActivity">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="16dip"
            android:layout_height="16dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="36dip"
            android:src="@mipmap/common_back" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="亲密"
            android:textColor="#ff3c3b41"
            android:textSize="17dip" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="好友"
            android:textColor="#B9B8C1"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="关注"
            android:textColor="#B9B8C1"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="粉丝"
            android:textColor="#B9B8C1"
            android:textSize="15dip" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/layout_none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="214dip"
            android:layout_height="224dip"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="214dip"
                android:layout_height="214dip"
                android:src="@mipmap/close_none_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="66dip"
                android:text="多聊天才会有亲密的人～"
                android:textColor="#B9B8C1"
                android:textSize="12dip" />

            <Button
                android:id="@+id/go_chat"
                android:layout_width="170dip"
                android:layout_height="50dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/build_user_save_bg"
                android:text="去聊聊"
                android:textColor="#ffffff"
                android:textSize="15dip" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>