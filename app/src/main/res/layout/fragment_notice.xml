<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.show.NoticeFragment">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="#ffffff">

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@drawable/shape_main_notice_search_bg"
            android:gravity="center"></EditText>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/layout_notice"
        android:layout_width="match_parent"
        android:layout_height="64dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="26dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/shape_main_notice_toast_bg">

        <TextView
            android:id="@+id/tip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="10dip"
            android:text="打开通知，及时接受消息"
            android:textColor="#FFFFFF"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tip1"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="3dip"
            android:text="交友成功率提升10倍"
            android:textColor="#AAFFFFFF"
            android:textSize="14dip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="1dip"
                android:layout_height="15dip"
                android:layout_marginTop="2dip"
                android:background="#ffffff"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tip1"
                android:layout_marginLeft="12dip"
                android:text="开启 >"
                android:textColor="#FFFFFF"
                android:textSize="14dip" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>