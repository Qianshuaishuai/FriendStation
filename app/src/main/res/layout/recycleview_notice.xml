<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:gravity="center_vertical"
    android:id="@+id/layout_main"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginLeft="15dip"
        android:src="@mipmap/test4" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友"
                android:textColor="#444463"
                android:textSize="15dip" />

            <RelativeLayout
                android:id="@+id/layout_sign"
                android:layout_width="30dip"
                android:layout_height="15dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/shape_notice_tip_bg">

                <TextView
                    android:id="@+id/sign_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="官方"
                    android:textColor="#ffffff"
                    android:textSize="9dip" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tip"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="地址发我，我去看看。"
            android:textColor="#B9B8C1"
            android:textSize="14dip" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/right"
            android:layout_width="16dip"
            android:layout_height="16dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:src="@mipmap/common_right" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity=""
            android:layout_marginRight="15dip"
            android:layout_marginBottom="12dip"
            android:text="12:30"
            android:textColor="#B9B8C1"
            android:textSize="14dip" />
    </RelativeLayout>
</LinearLayout>
