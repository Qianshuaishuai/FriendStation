<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/voice_background"
    tools:context=".ui.main.VoiceTipActivity">

    <ImageView
        android:layout_width="266dip"
        android:layout_height="273dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dip"
        android:src="@mipmap/voice_head_icon" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dip"
        android:background="@drawable/shape_voice_tip_one_bg">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:background="@drawable/shape_voice_tip_two_bg">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/shape_voice_tip_three_bg">

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dip"
                    android:paddingTop="8dip"
                    android:paddingRight="20dip"
                    android:paddingBottom="8dip"
                    android:text="Jerry 向你发来语音请求"
                    android:textColor="#5B4FBD"
                    android:textSize="15dip" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    </LinearLayout>
</RelativeLayout>