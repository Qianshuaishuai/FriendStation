<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="340dip">

    <RelativeLayout
        android:layout_width="380dip"
        android:layout_height="340dip"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_dialog_bg">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="18dip"
            android:layout_marginRight="15dip"
            android:gravity="center"
            android:text="用户协议和隐私政策"
            android:textColor="#1e1e1e"
            android:textSize="18dip"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="340dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="20dip"
            android:layout_marginRight="20dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请你务必审慎阅读，充分理解“用户须知”和“隐私权协议”各条款，包括但不限于；为了向您提供即时通讯，内容分享等服务，我们需要收集的您的设备信息和操作日志等个人信息，您可以在“设置”中查看，变更，删除个人信息并管理您的授权。"
                android:textColor="#1e1e1e"
                android:textSize="14dip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="你可以阅读"
                    android:textColor="#1e1e1e"
                    android:textSize="14dip" />

                <TextView
                    android:id="@+id/tip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《用户须知》"
                    android:textColor="#1E90FF"
                    android:textSize="14dip" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="和"
                    android:textColor="#1e1e1e"
                    android:textSize="14dip" />

                <TextView
                    android:id="@+id/tip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《隐私权协议》"
                    android:textColor="#1E90FF"
                    android:textSize="14dip" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="了解详细信息。如您同意请点击“同意”开始接受我们的服务"
                android:textColor="#1e1e1e"
                android:textSize="14dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_below="@+id/layout_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/dialog_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我已同意并阅读以上条款协议"
                    android:textColor="#1e1e1e"
                    android:textSize="14dip" />
            </LinearLayout>
        </LinearLayout>

        <!--<TextView-->
        <!--android:id="@+id/tip1"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="180dip"-->
        <!--android:layout_marginTop="170dip"-->
        <!--android:gravity="center"-->
