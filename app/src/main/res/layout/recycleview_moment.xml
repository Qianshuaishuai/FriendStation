<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dip"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:paddingTop="15dip">

    <ImageView
        android:id="@+id/head"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="10dip"
        android:src="@mipmap/test4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知用户"
                android:textColor="#37445A"
                android:textSize="15dip" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="10dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="#B9B8C1"></View>

            <ImageView
                android:layout_width="17dip"
                android:layout_height="12dip"
                android:src="@mipmap/look_me_card" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="10dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="#B9B8C1"></View>

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知"
                android:textColor="#A6A8AD"
                android:textSize="12dip" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="10dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="#B9B8C1"></View>

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27岁"
                android:textColor="#A6A8AD"
                android:textSize="12dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="10dip"
            android:text="希望一起去旅行～"
            android:textColor="#37445A"
            android:textSize="15dip" />

        <ImageView
            android:id="@+id/content_img"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:src="@mipmap/test1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览5次"
                android:textColor="#A6A8AD"
                android:textSize="12dip" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="深圳"
                android:textColor="#A6A8AD"
                android:textSize="12dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="20dip"
                    android:layout_height="17.5dip"
                    android:src="@mipmap/main_moment_share" />

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="10dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:background="#B9B8C1"></View>

                <ImageView
                    android:id="@+id/like"
                    android:layout_width="17dip"
                    android:layout_height="18dip"
                    android:src="@mipmap/main_moment_like_normal" />

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="10dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:background="#B9B8C1"></View>

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="44dip"
                    android:layout_height="44dip"
                    android:layout_marginRight="10dip"
                    android:src="@mipmap/main_moment_comment" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
