<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.LoginPhoneActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="98dip"
        android:layout_height="98dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dip"
        android:src="@mipmap/login_logo" />

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="35dip"
        android:layout_marginTop="72dip"
        android:layout_marginRight="35dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textColor="#ff5b4fbd"
                android:textSize="15dip" />

            <view
                android:layout_width="1dip"
                android:layout_height="9dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#D4D4D4"></view>

            <EditText
                android:id="@+id/phone"
                android:layout_width="180dip"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一步"
                    android:textColor="#fff75184"
                    android:textSize="14dip" />
            </LinearLayout>
        </LinearLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="12dip"
            android:background="#D4D4D4"></view>
    </LinearLayout>

    <TextView
        android:id="@+id/know"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dip"
        android:text="用户需知"
        android:textColor="#ffb9b8c1"
        android:textSize="12dip" />

    <LinearLayout
        android:id="@+id/layout_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dip"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:src="@mipmap/login_wechat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="微信登录"
            android:textColor="#ff37445a"
            android:textSize="11dip" />
    </LinearLayout>
</RelativeLayout>